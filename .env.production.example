# 本番環境設定ファイル例
# このファイルを .env.production としてコピーし、実際の値を設定してください

# Database Configuration
DATABASE_CONNECTION_STRING=Host=localhost;Database=mrs_production;Username=mrs_user;Password=YOUR_SECURE_PASSWORD

# JWT Configuration  
JWT_SECRET_KEY=YOUR_256_BIT_SECRET_KEY_REPLACE_IN_PRODUCTION
JWT_ISSUER=https://yourdomain.com
JWT_AUDIENCE=https://yourdomain.com
JWT_EXPIRATION_MINUTES=60

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Backup Configuration
BACKUP_DIRECTORY=/var/backups/mrs
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY

# Monitoring & Logging
SERILOG_MINIMUM_LEVEL=Information
SERILOG_WRITE_TO_CONSOLE=false
SERILOG_WRITE_TO_FILE=true
SERILOG_FILE_PATH=/var/log/mrs/mrs-.log

# Health Checks
HEALTH_CHECK_TIMEOUT_SECONDS=5
HEALTH_CHECK_DEGRADED_TIMEOUT_SECONDS=10

# SSL/TLS Configuration
USE_HTTPS_REDIRECTION=true
HSTS_MAX_AGE_SECONDS=31536000

# External Services
SMTP_SERVER=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Redis Configuration (if using Redis for caching)
REDIS_CONNECTION_STRING=localhost:6379

# Application Insights (if using Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_INSTRUMENTATION_KEY

# Security Headers
CSP_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'