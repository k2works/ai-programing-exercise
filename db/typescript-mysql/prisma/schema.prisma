datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/// 部門マスタテーブル
model Department {
  /// 部門コード（主キー）
  deptCode   String    @id @map("dept_code") @db.VarChar(6)
  /// 部門名
  name       String?   @map("name") @db.VarChar(40)
  /// 組織階層
  layer      Int       @default(0) @map("layer")

  @@map("department")
}
