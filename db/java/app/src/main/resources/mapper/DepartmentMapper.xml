<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sales.domain.repository.DepartmentMapper">

    <!-- ResultMap定義 -->
    <resultMap id="departmentResultMap" type="com.example.sales.domain.model.Department">
        <id property="departmentCode" column="部門コード"/>
        <result property="startDate" column="開始日"/>
        <result property="endDate" column="終了日"/>
        <result property="departmentName" column="部門名"/>
        <result property="organizationLevel" column="組織階層"/>
        <result property="departmentPath" column="部門パス"/>
        <result property="lowestLevelFlag" column="最下層区分"/>
        <result property="slipInputFlag" column="伝票入力可否"/>
        <result property="createdAt" column="作成日時"/>
        <result property="createdBy" column="作成者名"/>
        <result property="updatedAt" column="更新日時"/>
        <result property="updatedBy" column="更新者名"/>
    </resultMap>

    <!-- INSERT -->
    <insert id="insert" parameterType="com.example.sales.domain.model.Department">
        INSERT INTO 部門マスタ (
            部門コード,
            開始日,
            終了日,
            部門名,
            組織階層,
            部門パス,
            最下層区分,
            伝票入力可否,
            作成者名,
            更新者名
        ) VALUES (
            #{departmentCode},
            #{startDate},
            #{endDate},
            #{departmentName},
            #{organizationLevel},
            #{departmentPath},
            #{lowestLevelFlag},
            #{slipInputFlag},
            #{createdBy},
            #{updatedBy}
        )
    </insert>

    <!-- UPDATE -->
    <update id="update" parameterType="com.example.sales.domain.model.Department">
        UPDATE 部門マスタ
        SET
            終了日 = #{endDate},
            部門名 = #{departmentName},
            組織階層 = #{organizationLevel},
            部門パス = #{departmentPath},
            最下層区分 = #{lowestLevelFlag},
            伝票入力可否 = #{slipInputFlag},
            更新日時 = CURRENT_TIMESTAMP,
            更新者名 = #{updatedBy}
        WHERE
            部門コード = #{departmentCode}
            AND 開始日 = #{startDate}
    </update>

    <!-- DELETE -->
    <delete id="delete">
        DELETE FROM 部門マスタ
        WHERE
            部門コード = #{departmentCode}
            AND 開始日 = #{startDate}
    </delete>

    <!-- SELECT BY ID -->
    <select id="findById" resultMap="departmentResultMap">
        SELECT
            部門コード,
            開始日,
            終了日,
            部門名,
            組織階層,
            部門パス,
            最下層区分,
            伝票入力可否,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            部門マスタ
        WHERE
            部門コード = #{departmentCode}
            AND 開始日 = #{startDate}
    </select>

    <!-- SELECT ALL -->
    <select id="findAll" resultMap="departmentResultMap">
        SELECT
            部門コード,
            開始日,
            終了日,
            部門名,
            組織階層,
            部門パス,
            最下層区分,
            伝票入力可否,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            部門マスタ
        ORDER BY
            部門コード, 開始日
    </select>

    <!-- SELECT BY DEPARTMENT CODE (有効期間を考慮) -->
    <select id="findByDepartmentCode" resultMap="departmentResultMap">
        SELECT
            部門コード,
            開始日,
            終了日,
            部門名,
            組織階層,
            部門パス,
            最下層区分,
            伝票入力可否,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            部門マスタ
        WHERE
            部門コード = #{departmentCode}
            AND 開始日 &lt;= #{targetDate}
            AND 終了日 &gt;= #{targetDate}
    </select>

</mapper>
