<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sales.domain.repository.CategoryTypeMapper">

    <!-- ResultMap定義 -->
    <resultMap id="categoryTypeResultMap" type="com.example.sales.domain.model.CategoryType">
        <id property="categoryTypeCode" column="取引先分類種別コード"/>
        <result property="categoryTypeName" column="取引先分類種別名"/>
        <result property="createdAt" column="作成日時"/>
        <result property="createdBy" column="作成者名"/>
        <result property="updatedAt" column="更新日時"/>
        <result property="updatedBy" column="更新者名"/>
    </resultMap>

    <!-- INSERT -->
    <insert id="insert" parameterType="com.example.sales.domain.model.CategoryType">
        INSERT INTO 取引先分類種別マスタ (
            取引先分類種別コード,
            取引先分類種別名,
            作成者名,
            更新者名
        ) VALUES (
            #{categoryTypeCode},
            #{categoryTypeName},
            #{createdBy},
            #{updatedBy}
        )
    </insert>

    <!-- UPDATE -->
    <update id="update" parameterType="com.example.sales.domain.model.CategoryType">
        UPDATE 取引先分類種別マスタ
        SET
            取引先分類種別名 = #{categoryTypeName},
            更新日時 = CURRENT_TIMESTAMP,
            更新者名 = #{updatedBy}
        WHERE
            取引先分類種別コード = #{categoryTypeCode}
    </update>

    <!-- DELETE -->
    <delete id="delete">
        DELETE FROM 取引先分類種別マスタ
        WHERE
            取引先分類種別コード = #{categoryTypeCode}
    </delete>

    <!-- SELECT BY ID -->
    <select id="findById" resultMap="categoryTypeResultMap">
        SELECT
            取引先分類種別コード,
            取引先分類種別名,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            取引先分類種別マスタ
        WHERE
            取引先分類種別コード = #{categoryTypeCode}
    </select>

    <!-- SELECT ALL -->
    <select id="findAll" resultMap="categoryTypeResultMap">
        SELECT
            取引先分類種別コード,
            取引先分類種別名,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            取引先分類種別マスタ
        ORDER BY
            取引先分類種別コード
    </select>

</mapper>
