<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sales.domain.repository.PurchaseOrderMapper">

    <!-- ResultMap定義 -->
    <resultMap id="purchaseOrderResultMap" type="com.example.sales.domain.model.PurchaseOrder">
        <id property="poNo" column="発注番号"/>
        <result property="poDate" column="発注日"/>
        <result property="orderNo" column="受注番号"/>
        <result property="supplierCode" column="仕入先コード"/>
        <result property="supplierBranch" column="仕入先枝番"/>
        <result property="employeeCode" column="社員コード"/>
        <result property="dueDate" column="指定納期"/>
        <result property="warehouseCode" column="倉庫コード"/>
        <result property="poAmount" column="発注金額合計"/>
        <result property="consumptionTax" column="消費税合計"/>
        <result property="slipComment" column="備考"/>
        <result property="createdAt" column="作成日時"/>
        <result property="createdBy" column="作成者名"/>
        <result property="updatedAt" column="更新日時"/>
        <result property="updatedBy" column="更新者名"/>
    </resultMap>

    <!-- INSERT -->
    <insert id="insert" parameterType="com.example.sales.domain.model.PurchaseOrder">
        INSERT INTO 発注データ (
            発注番号,
            発注日,
            受注番号,
            仕入先コード,
            仕入先枝番,
            社員コード,
            指定納期,
            倉庫コード,
            発注金額合計,
            消費税合計,
            備考,
            作成者名,
            更新者名
        ) VALUES (
            #{poNo},
            #{poDate},
            #{orderNo},
            #{supplierCode},
            #{supplierBranch},
            #{employeeCode},
            #{dueDate},
            #{warehouseCode},
            #{poAmount},
            #{consumptionTax},
            #{slipComment},
            #{createdBy},
            #{updatedBy}
        )
    </insert>

    <!-- UPDATE -->
    <update id="update" parameterType="com.example.sales.domain.model.PurchaseOrder">
        UPDATE 発注データ
        SET
            発注日 = #{poDate},
            受注番号 = #{orderNo},
            仕入先コード = #{supplierCode},
            仕入先枝番 = #{supplierBranch},
            社員コード = #{employeeCode},
            指定納期 = #{dueDate},
            倉庫コード = #{warehouseCode},
            発注金額合計 = #{poAmount},
            消費税合計 = #{consumptionTax},
            備考 = #{slipComment},
            更新日時 = CURRENT_TIMESTAMP,
            更新者名 = #{updatedBy}
        WHERE
            発注番号 = #{poNo}
    </update>

    <!-- DELETE -->
    <delete id="delete">
        DELETE FROM 発注データ
        WHERE
            発注番号 = #{poNo}
    </delete>

    <!-- SELECT BY ID -->
    <select id="findById" resultMap="purchaseOrderResultMap">
        SELECT
            発注番号,
            発注日,
            受注番号,
            仕入先コード,
            仕入先枝番,
            社員コード,
            指定納期,
            倉庫コード,
            発注金額合計,
            消費税合計,
            備考,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            発注データ
        WHERE
            発注番号 = #{poNo}
    </select>

    <!-- SELECT ALL -->
    <select id="findAll" resultMap="purchaseOrderResultMap">
        SELECT
            発注番号,
            発注日,
            受注番号,
            仕入先コード,
            仕入先枝番,
            社員コード,
            指定納期,
            倉庫コード,
            発注金額合計,
            消費税合計,
            備考,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            発注データ
        ORDER BY
            発注番号
    </select>

    <!-- SELECT BY SUPPLIER CODE -->
    <select id="findBySupplierCode" resultMap="purchaseOrderResultMap">
        SELECT
            発注番号,
            発注日,
            受注番号,
            仕入先コード,
            仕入先枝番,
            社員コード,
            指定納期,
            倉庫コード,
            発注金額合計,
            消費税合計,
            備考,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            発注データ
        WHERE
            仕入先コード = #{supplierCode}
        ORDER BY
            発注番号
    </select>

    <!-- SELECT BY ORDER NO -->
    <select id="findByOrderNo" resultMap="purchaseOrderResultMap">
        SELECT
            発注番号,
            発注日,
            受注番号,
            仕入先コード,
            仕入先枝番,
            社員コード,
            指定納期,
            倉庫コード,
            発注金額合計,
            消費税合計,
            備考,
            作成日時,
            作成者名,
            更新日時,
            更新者名
        FROM
            発注データ
        WHERE
            受注番号 = #{orderNo}
        ORDER BY
            発注番号
    </select>

</mapper>
