<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- DataSeeder: Spring DIで注入されるMapperの警告を除外 -->
    <Match>
        <Class name="com.example.sales.seed.DataSeeder"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Controller: Java 17+ と SpotBugs の互換性問題を回避 -->
    <Match>
        <Class name="~com\.example\.sales\.controller\..*"/>
    </Match>
</FindBugsFilter>
