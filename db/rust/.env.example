# データベース選択（postgres または mysql）
DB_TYPE=postgres

# PostgreSQL 設定
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sales_management
POSTGRES_PORT=5432

# MySQL 設定
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=sales_management
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_PORT=3306

# Adminer ポート
ADMINER_PORT=8080

# SQLx データベース接続 URL
# PostgreSQL を使用する場合
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sales_management"

# MySQL を使用する場合
# DATABASE_URL="mysql://user:password@localhost:3306/sales_management"
