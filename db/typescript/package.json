{
  "name": "sales-management-db",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "gulp": "gulp",
    "watch": "gulp watch",
    "guard": "gulp guard",
    "check": "gulp checkAndFix",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:test": "cross-env DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/sales_management_test?schema=public\" prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx src/seed.ts",
    "seed": "npm run prisma:seed",
    "schemaspy": "docker-compose run --rm schemaspy",
    "schemaspy:view": "docker-compose up schemaspy-viewer",
    "setup": "npm install && npm run check",
    "api": "tsx src/api/server.ts",
    "api:watch": "tsx watch src/api/server.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@prisma/client": "^5.20.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "dependency-cruiser": "^16.5.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "gulp": "^5.0.1",
    "gulp-shell": "^0.8.0",
    "prettier": "^3.6.2",
    "prisma": "^5.20.0",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "zod": "^4.1.12",
    "zod-prisma-types": "^3.3.5"
  }
}
