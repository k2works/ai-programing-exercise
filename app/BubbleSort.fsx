// バブルソート（配列を直接変更するバージョン）
let バブルソート (配列: int array) =
    let 要素数 = 配列.Length

    // ループ1: 外側カウンタ = 1 から 要素数-1 まで
    for 外側カウンタ = 1 to 要素数 - 1 do
        // ループ2: 内側カウンタ = 要素数 から 外側カウンタ+1 まで（右から左へ）
        for 内側カウンタ = 要素数 downto 外側カウンタ + 1 do
            // 右の数が左の数より小さかったら交換
            if 配列.[内側カウンタ - 1] < 配列.[内側カウンタ - 2] then
                // 交換処理（一時保存を使う）
                let 一時保存 = 配列.[内側カウンタ - 1]
                配列.[内側カウンタ - 1] <- 配列.[内側カウンタ - 2]
                配列.[内側カウンタ - 2] <- 一時保存
    配列

// テスト
let 数字たち = [| 5; 3; 4; 1; 2 |]
printfn "並べ替え前: %A" 数字たち
let 結果 = バブルソート 数字たち
printfn "並べ替え後: %A" 結果
