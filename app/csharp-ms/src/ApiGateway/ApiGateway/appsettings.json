{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "financial-accounts-route": {
        "ClusterId": "financial-cluster",
        "Match": {
          "Path": "/api/accounts/{**catch-all}"
        }
      },
      "financial-journals-route": {
        "ClusterId": "financial-cluster",
        "Match": {
          "Path": "/api/journals/{**catch-all}"
        }
      },
      "management-analysis-route": {
        "ClusterId": "management-cluster",
        "Match": {
          "Path": "/api/financial-analysis/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "financial-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "management-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
