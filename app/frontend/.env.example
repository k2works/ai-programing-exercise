# ================================
# Application Configuration
# ================================

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=Jobs Board
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ================================
# API Configuration
# ================================

# API Base URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# API Mocking (for development/testing)
NEXT_PUBLIC_ENABLE_API_MOCKING=true
NEXT_PUBLIC_MSW_DELAY=0

# ================================
# Authentication
# ================================

# NextAuth Configuration (when implemented)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here
NEXT_PUBLIC_AUTH_ENABLED=false

# ================================
# Feature Flags
# ================================

# Enable/Disable Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ================================
# Third-party Services
# ================================

# Analytics (Google Analytics, Plausible, etc.)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ================================
# Development Tools
# ================================

# Bundle Analysis
ANALYZE=false

# Logging Level
NEXT_PUBLIC_LOG_LEVEL=debug

# ================================
# Build Configuration
# ================================

# Build ID (auto-generated in CI/CD)
BUILD_ID=

# Git Information
NEXT_PUBLIC_GIT_COMMIT=
NEXT_PUBLIC_GIT_BRANCH=
NEXT_PUBLIC_BUILD_TIME=

# ================================
# Deployment Configuration
# ================================

# Vercel
VERCEL_URL=
VERCEL_ENV=
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=
VERCEL_GIT_COMMIT_AUTHOR_NAME=

# ================================
# Database Configuration (Future)
# ================================

# Database URL (when backend is implemented)
DATABASE_URL=

# Redis Cache (when implemented)
REDIS_URL=

# ================================
# Security
# ================================

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED=false
NEXT_PUBLIC_RATE_LIMIT_MAX_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=60000