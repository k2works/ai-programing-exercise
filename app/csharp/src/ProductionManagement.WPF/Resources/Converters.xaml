<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:ProductionManagement.WPF.Converters">

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    <converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" Invert="True"/>
    <converters:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityInvertConverter" Invert="True"/>

    <!-- InverseBool用（IsEnabled等で使用） -->
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

    <!-- 複数条件用 -->
    <converters:AllTrueConverter x:Key="AllTrueConverter"/>

    <!-- DateOnly <-> DateTime 変換用 -->
    <converters:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter"/>

</ResourceDictionary>
