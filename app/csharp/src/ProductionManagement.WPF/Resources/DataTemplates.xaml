<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:itemVm="clr-namespace:ProductionManagement.WPF.ViewModels.Items"
                    xmlns:bomVm="clr-namespace:ProductionManagement.WPF.ViewModels.Bom"
                    xmlns:supplierVm="clr-namespace:ProductionManagement.WPF.ViewModels.Suppliers"
                    xmlns:purchaseOrderVm="clr-namespace:ProductionManagement.WPF.ViewModels.PurchaseOrders"
                    xmlns:planningVm="clr-namespace:ProductionManagement.WPF.ViewModels.Planning"
                    xmlns:workOrderVm="clr-namespace:ProductionManagement.WPF.ViewModels.WorkOrders"
                    xmlns:inventoryVm="clr-namespace:ProductionManagement.WPF.ViewModels.Inventory"
                    xmlns:reportsVm="clr-namespace:ProductionManagement.WPF.ViewModels.Reports"
                    xmlns:grpcVm="clr-namespace:ProductionManagement.WPF.ViewModels.Grpc"
                    xmlns:itemViews="clr-namespace:ProductionManagement.WPF.Views.Items"
                    xmlns:bomViews="clr-namespace:ProductionManagement.WPF.Views.Bom"
                    xmlns:supplierViews="clr-namespace:ProductionManagement.WPF.Views.Suppliers"
                    xmlns:purchaseOrderViews="clr-namespace:ProductionManagement.WPF.Views.PurchaseOrders"
                    xmlns:planningViews="clr-namespace:ProductionManagement.WPF.Views.Planning"
                    xmlns:workOrderViews="clr-namespace:ProductionManagement.WPF.Views.WorkOrders"
                    xmlns:inventoryViews="clr-namespace:ProductionManagement.WPF.Views.Inventory"
                    xmlns:reportsViews="clr-namespace:ProductionManagement.WPF.Views.Reports"
                    xmlns:grpcViews="clr-namespace:ProductionManagement.WPF.Views.Grpc">

    <!-- 品目マスタ ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type itemVm:ItemListViewModel}">
        <itemViews:ItemListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type itemVm:ItemDetailViewModel}">
        <itemViews:ItemDetailView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type itemVm:ItemEditViewModel}">
        <itemViews:ItemEditView/>
    </DataTemplate>

    <!-- BOM ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type bomVm:BomExplodeViewModel}">
        <bomViews:BomExplodeView/>
    </DataTemplate>

    <!-- 取引先マスタ ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type supplierVm:SupplierListViewModel}">
        <supplierViews:SupplierListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type supplierVm:SupplierDetailViewModel}">
        <supplierViews:SupplierDetailView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type supplierVm:SupplierEditViewModel}">
        <supplierViews:SupplierEditView/>
    </DataTemplate>

    <!-- 発注 ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type purchaseOrderVm:PurchaseOrderListViewModel}">
        <purchaseOrderViews:PurchaseOrderListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type purchaseOrderVm:PurchaseOrderEditViewModel}">
        <purchaseOrderViews:PurchaseOrderEditView/>
    </DataTemplate>

    <!-- 生産計画 ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type planningVm:MrpExecuteViewModel}">
        <planningViews:MrpExecuteView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type planningVm:OrderListViewModel}">
        <planningViews:OrderListView/>
    </DataTemplate>

    <!-- 作業指示 ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type workOrderVm:WorkOrderListViewModel}">
        <workOrderViews:WorkOrderListView/>
    </DataTemplate>

    <!-- 在庫 ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type inventoryVm:StockListViewModel}">
        <inventoryViews:StockListView/>
    </DataTemplate>

    <!-- 帳票 ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type reportsVm:ReportListViewModel}">
        <reportsViews:ReportListView/>
    </DataTemplate>

    <!-- gRPC ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type grpcVm:GrpcMrpViewModel}">
        <grpcViews:GrpcMrpView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type grpcVm:GrpcItemListViewModel}">
        <grpcViews:GrpcItemListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type grpcVm:GrpcBomExplodeViewModel}">
        <grpcViews:GrpcBomExplodeView/>
    </DataTemplate>

</ResourceDictionary>
