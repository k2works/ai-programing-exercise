<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:itemVm="clr-namespace:ProductionManagement.WPF.ViewModels.Items"
                    xmlns:bomVm="clr-namespace:ProductionManagement.WPF.ViewModels.Bom"
                    xmlns:supplierVm="clr-namespace:ProductionManagement.WPF.ViewModels.Suppliers"
                    xmlns:purchaseOrderVm="clr-namespace:ProductionManagement.WPF.ViewModels.PurchaseOrders"
                    xmlns:itemViews="clr-namespace:ProductionManagement.WPF.Views.Items"
                    xmlns:bomViews="clr-namespace:ProductionManagement.WPF.Views.Bom"
                    xmlns:supplierViews="clr-namespace:ProductionManagement.WPF.Views.Suppliers"
                    xmlns:purchaseOrderViews="clr-namespace:ProductionManagement.WPF.Views.PurchaseOrders">

    <!-- 品目マスタ ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type itemVm:ItemListViewModel}">
        <itemViews:ItemListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type itemVm:ItemDetailViewModel}">
        <itemViews:ItemDetailView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type itemVm:ItemEditViewModel}">
        <itemViews:ItemEditView/>
    </DataTemplate>

    <!-- BOM ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type bomVm:BomExplodeViewModel}">
        <bomViews:BomExplodeView/>
    </DataTemplate>

    <!-- 取引先マスタ ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type supplierVm:SupplierListViewModel}">
        <supplierViews:SupplierListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type supplierVm:SupplierDetailViewModel}">
        <supplierViews:SupplierDetailView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type supplierVm:SupplierEditViewModel}">
        <supplierViews:SupplierEditView/>
    </DataTemplate>

    <!-- 発注 ViewModel - View マッピング -->
    <DataTemplate DataType="{x:Type purchaseOrderVm:PurchaseOrderListViewModel}">
        <purchaseOrderViews:PurchaseOrderListView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type purchaseOrderVm:PurchaseOrderEditViewModel}">
        <purchaseOrderViews:PurchaseOrderEditView/>
    </DataTemplate>

</ResourceDictionary>
