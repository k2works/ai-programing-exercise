<UserControl x:Class="ProductionManagement.WPF.Views.Suppliers.SupplierDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels.Suppliers"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SupplierDetailViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <DockPanel Grid.Row="0" Margin="0,0,0,16">
            <Button DockPanel.Dock="Left"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="戻る">
                <materialDesign:PackIcon Kind="ArrowLeft"/>
            </Button>
            <TextBlock Text="取引先詳細"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"/>
            <Button Content="編集"
                    Command="{Binding EditCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- 詳細情報 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <materialDesign:Card Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 取引先コード -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="取引先コード"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding Supplier.SupplierCode}"
                               Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- 取引先名 -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="取引先名"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="1" Grid.Column="1"
                               Text="{Binding Supplier.SupplierName}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- 取引先名カナ -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="取引先名カナ"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding Supplier.SupplierNameKana}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- 取引先区分 -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="取引先区分"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <materialDesign:Chip Grid.Row="3" Grid.Column="1"
                                         Content="{Binding Supplier.SupplierType, Converter={StaticResource EnumDisplayNameConverter}}"
                                         Margin="0,0,0,16"/>

                    <!-- 郵便番号 -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="郵便番号"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="{Binding Supplier.PostalCode}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- 住所 -->
                    <TextBlock Grid.Row="5" Grid.Column="0"
                               Text="住所"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="5" Grid.Column="1"
                               Text="{Binding Supplier.Address}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>

                    <!-- 電話番号 -->
                    <TextBlock Grid.Row="6" Grid.Column="0"
                               Text="電話番号"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="6" Grid.Column="1"
                               Text="{Binding Supplier.PhoneNumber}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- FAX番号 -->
                    <TextBlock Grid.Row="7" Grid.Column="0"
                               Text="FAX番号"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="7" Grid.Column="1"
                               Text="{Binding Supplier.FaxNumber}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,0,0,16"/>

                    <!-- 担当者 -->
                    <TextBlock Grid.Row="8" Grid.Column="0"
                               Text="担当者"
                               Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                               Foreground="Gray"
                               Margin="0,0,0,16"/>
                    <TextBlock Grid.Row="8" Grid.Column="1"
                               Text="{Binding Supplier.ContactPerson}"
                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                               Margin="0,0,0,16"/>
                </Grid>
            </materialDesign:Card>
        </ScrollViewer>

        <!-- ローディング -->
        <Grid Grid.RowSpan="2"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True"
                         Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>
