<UserControl x:Class="ProductionManagement.WPF.Views.Grpc.GrpcMrpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels.Grpc"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:GrpcMrpViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="MRP 実行 (gRPC)"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"/>
            <TextBlock Text="Server Streaming による進捗リアルタイム表示"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- 操作パネル -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <DatePicker Grid.Column="0"
                            SelectedDate="{Binding StartDate}"
                            materialDesign:HintAssist.Hint="開始日"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Width="140"
                            Margin="0,0,16,0"/>

                <DatePicker Grid.Column="1"
                            SelectedDate="{Binding EndDate}"
                            materialDesign:HintAssist.Hint="終了日"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Width="140"
                            Margin="0,0,16,0"/>

                <StackPanel Grid.Column="2"/>

                <Button Grid.Column="3"
                        Command="{Binding ExecuteMrpCommand}"
                        Content="MRP 実行（ストリーミング）"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="4"
                        Command="{Binding ExecuteMrpSyncCommand}"
                        Content="MRP 実行（同期）"
                        Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                        Margin="0,0,8,0"/>

                <Button Grid.Column="5"
                        Command="{Binding ClearCommand}"
                        Content="クリア"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </Grid>
        </materialDesign:Card>

        <!-- 進捗表示 -->
        <materialDesign:Card Grid.Row="2" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{Binding CurrentPhase}"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <ProgressBar Grid.Column="1"
                                 Value="{Binding ProgressPercent}"
                                 Maximum="100"
                                 Height="20"
                                 Margin="0,0,16,0"/>

                    <TextBlock Grid.Column="2"
                               Text="{Binding ProgressPercent, StringFormat={}{0}%}"
                               VerticalAlignment="Center"
                               Width="40"/>
                </Grid>

                <TextBlock Grid.Row="1"
                           Text="{Binding ProgressMessage}"
                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                           Margin="0,8,0,0"/>
            </Grid>
        </materialDesign:Card>

        <!-- 進捗ログ -->
        <GroupBox Grid.Row="3" Header="進捗ログ">
            <DataGrid ItemsSource="{Binding ProgressItems}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Style="{StaticResource MaterialDesignDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="時刻" Binding="{Binding Timestamp, StringFormat=HH:mm:ss.fff}" Width="100"/>
                    <DataGridTextColumn Header="フェーズ" Binding="{Binding Phase}" Width="120"/>
                    <DataGridTextColumn Header="進捗" Binding="{Binding Progress, StringFormat={}{0}%}" Width="60"/>
                    <DataGridTextColumn Header="メッセージ" Binding="{Binding Message}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>
