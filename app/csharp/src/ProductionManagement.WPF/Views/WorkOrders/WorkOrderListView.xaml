<UserControl x:Class="ProductionManagement.WPF.Views.WorkOrders.WorkOrderListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels.WorkOrders"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:WorkOrderListViewModel}"
             d:DesignHeight="600" d:DesignWidth="1200">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <TextBlock Grid.Row="0"
                   Text="作業指示一覧"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,16"/>

        <!-- 検索フォーム -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <!-- 日付範囲 -->
                <DatePicker SelectedDate="{Binding DateFrom, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                            Width="130"
                            materialDesign:HintAssist.Hint="開始日（From）"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,8,0"/>
                <TextBlock Text="～" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker SelectedDate="{Binding DateTo, Converter={StaticResource DateOnlyToDateTimeConverter}}"
                            Width="130"
                            materialDesign:HintAssist.Hint="終了日（To）"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,16,0"/>

                <!-- ステータス -->
                <ComboBox ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding SelectedStatus}"
                          Width="120"
                          materialDesign:HintAssist.Hint="ステータス"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,16,0"/>

                <!-- 品目コード -->
                <TextBox Text="{Binding ItemCode, UpdateSourceTrigger=PropertyChanged}"
                         Width="150"
                         materialDesign:HintAssist.Hint="品目コード"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,16,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoadCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- ボタン -->
                <Button Content="検索"
                        Command="{Binding LoadCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0"/>
                <Button Content="クリア"
                        Command="{Binding ClearFilterCommand}"
                        Style="{StaticResource MaterialDesignOutlinedSecondaryButton}"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- データグリッド -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding WorkOrders}"
                  SelectedItem="{Binding SelectedWorkOrder}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="作業指示番号" Binding="{Binding WorkOrderNumber}" Width="140"/>
                <DataGridTextColumn Header="オーダ番号" Binding="{Binding OrderNumber}" Width="140"/>
                <DataGridTextColumn Header="品目コード" Binding="{Binding ItemCode}" Width="120"/>
                <DataGridTextColumn Header="指示数量" Binding="{Binding OrderQuantity, StringFormat=N0}" Width="100"/>
                <DataGridTextColumn Header="完了数量" Binding="{Binding CompletedQuantity, StringFormat=N0}" Width="100"/>
                <DataGridTextColumn Header="予定開始日" Binding="{Binding PlannedStartDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTextColumn Header="予定終了日" Binding="{Binding PlannedEndDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTextColumn Header="実績開始日" Binding="{Binding ActualStartDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTextColumn Header="実績終了日" Binding="{Binding ActualEndDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTemplateColumn Header="ステータス" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status, Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="操作" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding DataContext.StartWorkCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="作業開始"
                                        Foreground="Green">
                                    <materialDesign:PackIcon Kind="Play"/>
                                </Button>
                                <Button Command="{Binding DataContext.CompleteWorkCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="作業完了"
                                        Foreground="Blue">
                                    <materialDesign:PackIcon Kind="Check"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- フッター（件数表示） -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="件数: "/>
            <TextBlock Text="{Binding WorkOrders.Count}"/>
            <TextBlock Text=" 件"/>
        </StackPanel>

        <!-- ローディング -->
        <Grid Grid.RowSpan="4"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True"
                         Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>
