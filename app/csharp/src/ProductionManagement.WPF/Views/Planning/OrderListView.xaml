<UserControl x:Class="ProductionManagement.WPF.Views.Planning.OrderListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels.Planning"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:OrderListViewModel}"
             d:DesignHeight="600" d:DesignWidth="1200">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <TextBlock Grid.Row="0"
                   Text="オーダ照会"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,16"/>

        <!-- 検索フォーム -->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal">
                <!-- 日付範囲 -->
                <DatePicker SelectedDate="{Binding DateFrom}"
                            Width="130"
                            materialDesign:HintAssist.Hint="納期（開始）"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,8,0"/>
                <TextBlock Text="～" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <DatePicker SelectedDate="{Binding DateTo}"
                            Width="130"
                            materialDesign:HintAssist.Hint="納期（終了）"
                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                            Margin="0,0,16,0"/>

                <!-- オーダ種別 -->
                <ComboBox ItemsSource="{Binding OrderTypes}"
                          SelectedItem="{Binding SelectedOrderType}"
                          Width="120"
                          materialDesign:HintAssist.Hint="オーダ種別"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,16,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Converter="{StaticResource EnumDisplayNameConverter}"
                                             TargetNullValue="（すべて）"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- ステータス -->
                <ComboBox ItemsSource="{Binding Statuses}"
                          SelectedItem="{Binding SelectedStatus}"
                          Width="120"
                          materialDesign:HintAssist.Hint="ステータス"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,16,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Converter="{StaticResource EnumDisplayNameConverter}"
                                             TargetNullValue="（すべて）"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- 品目コード -->
                <TextBox Text="{Binding ItemCode, UpdateSourceTrigger=PropertyChanged}"
                         Width="150"
                         materialDesign:HintAssist.Hint="品目コード"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,16,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoadCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- ボタン -->
                <Button Content="検索"
                        Command="{Binding LoadCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0"/>
                <Button Content="クリア"
                        Command="{Binding ClearFilterCommand}"
                        Style="{StaticResource MaterialDesignOutlinedSecondaryButton}"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- データグリッド -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Orders}"
                  SelectedItem="{Binding SelectedOrder}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Style="{StaticResource MaterialDesignDataGrid}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="オーダ番号" Binding="{Binding OrderNumber}" Width="140"/>
                <DataGridTemplateColumn Header="種別" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding OrderType, Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="品目コード" Binding="{Binding ItemCode}" Width="120"/>
                <DataGridTextColumn Header="計画数量" Binding="{Binding PlanQuantity, StringFormat=N0}" Width="100"/>
                <DataGridTextColumn Header="開始日" Binding="{Binding StartDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTextColumn Header="納期" Binding="{Binding DueDate, StringFormat=yyyy/MM/dd}" Width="100"/>
                <DataGridTextColumn Header="拠点" Binding="{Binding LocationCode}" Width="80"/>
                <DataGridTemplateColumn Header="ステータス" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status, Converter={StaticResource EnumDisplayNameConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="操作" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Command="{Binding DataContext.ConfirmCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="確定"
                                        Foreground="Green">
                                    <materialDesign:PackIcon Kind="Check"/>
                                </Button>
                                <Button Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="取消"
                                        Foreground="Red">
                                    <materialDesign:PackIcon Kind="Cancel"/>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- フッター（件数表示） -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="件数: "/>
            <TextBlock Text="{Binding Orders.Count}"/>
            <TextBlock Text=" 件"/>
        </StackPanel>

        <!-- ローディング -->
        <Grid Grid.RowSpan="4"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True"
                         Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>
