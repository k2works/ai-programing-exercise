<UserControl x:Class="ProductionManagement.WPF.Views.Items.ItemDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels.Items"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ItemDetailViewModel}"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <DockPanel Grid.Row="0" Margin="0,0,0,24">
            <Button DockPanel.Dock="Left"
                    Command="{Binding GoBackCommand}"
                    Style="{StaticResource MaterialDesignIconButton}"
                    ToolTip="戻る">
                <materialDesign:PackIcon Kind="ArrowLeft"/>
            </Button>
            <TextBlock Text="品目詳細"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       VerticalAlignment="Center"
                       Margin="8,0,0,0"/>
            <Button Content="編集"
                    Command="{Binding EditCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    HorizontalAlignment="Right"/>
        </DockPanel>

        <!-- コンテンツ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 基本情報 -->
                <materialDesign:Card Padding="24" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="品目コード" FontWeight="Bold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Item.ItemCode}"
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="品名" FontWeight="Bold" Margin="0,16,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Item.ItemName}" Margin="0,16,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="品目区分" FontWeight="Bold" Margin="0,16,0,0"/>
                        <materialDesign:Chip Grid.Row="2" Grid.Column="1"
                                             Content="{Binding Item.ItemCategory, Converter={StaticResource EnumDisplayNameConverter}}"
                                             Margin="0,12,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="リードタイム" FontWeight="Bold" Margin="0,16,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1"
                                   Text="{Binding Item.LeadTime, StringFormat={}{0} 日}"
                                   Margin="0,16,0,0"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="安全在庫" FontWeight="Bold" Margin="0,16,0,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Item.SafetyStock}" Margin="0,16,0,0"/>
                    </Grid>
                </materialDesign:Card>

                <!-- BOM 情報（子品目） -->
                <materialDesign:Card Padding="24" Margin="0,0,0,16"
                                     Visibility="{Binding BomChildren.Count, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="構成品目（BOM）"
                                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                       DockPanel.Dock="Left"/>
                            <Button Content="BOM展開"
                                    Command="{Binding ShowBomExplodeCommand}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Right"/>
                        </DockPanel>

                        <DataGrid ItemsSource="{Binding BomChildren}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="品目コード" Binding="{Binding ItemCode}" Width="120"/>
                                <DataGridTextColumn Header="品名" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="必要量" Binding="{Binding RequiredQuantity}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>

                <!-- 使用先情報 -->
                <materialDesign:Card Padding="24"
                                     Visibility="{Binding WhereUsedItems.Count, Converter={StaticResource NullToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="使用先（Where Used）"
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                   Margin="0,0,0,16"/>

                        <DataGrid ItemsSource="{Binding WhereUsedItems}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  MaxHeight="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="親品目コード" Binding="{Binding ParentItemCode}" Width="120"/>
                                <DataGridTextColumn Header="品名" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="必要量" Binding="{Binding RequiredQuantity}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>

        <!-- ローディング -->
        <Grid Grid.RowSpan="2"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True"
                         Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>
