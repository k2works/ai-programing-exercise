<UserControl x:Class="ProductionManagement.WPF.Views.Reports.ReportListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels.Reports"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ReportListViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <TextBlock Grid.Row="0"
                   Text="帳票出力"
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,16"/>

        <!-- 設定フォーム -->
        <materialDesign:Card Grid.Row="1" Padding="24" Margin="0,0,0,16">
            <StackPanel>
                <!-- 帳票種別 -->
                <TextBlock Text="帳票種別" Margin="0,0,0,8"/>
                <ComboBox ItemsSource="{Binding ReportTypes}"
                          SelectedItem="{Binding SelectedReportType}"
                          Width="300"
                          HorizontalAlignment="Left"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Margin="0,0,0,16"/>

                <!-- 対象コード（発注番号、作業指示番号） -->
                <StackPanel Visibility="{Binding ShowTargetCodeInput, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="対象コード（発注番号 / 作業指示番号）" Margin="0,0,0,8"/>
                    <TextBox Text="{Binding TargetCode, UpdateSourceTrigger=PropertyChanged}"
                             Width="300"
                             HorizontalAlignment="Left"
                             materialDesign:HintAssist.Hint="コードを入力"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,0,16"/>
                </StackPanel>

                <!-- 出力ボタン -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Excel 出力"
                            Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            Margin="0,0,16,0">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="MicrosoftExcel" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Excel 出力" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                    <Button Content="PDF 出力"
                            Command="{Binding ExportToPdfCommand}"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            materialDesign:ButtonAssist.CornerRadius="4">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilePdfBox" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="PDF 出力" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- 説明 -->
        <materialDesign:Card Grid.Row="2" Padding="16">
            <StackPanel>
                <TextBlock Text="帳票出力について" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock TextWrapping="Wrap">
                    <Run Text="・在庫一覧: すべての在庫データを Excel / PDF ファイルに出力します。"/>
                    <LineBreak/>
                    <Run Text="・発注書: 指定した発注番号の発注書を Excel / PDF ファイルに出力します。"/>
                    <LineBreak/>
                    <Run Text="・作業指示書: 指定した作業指示番号の作業指示書を Excel / PDF ファイルに出力します。"/>
                </TextBlock>
            </StackPanel>
        </materialDesign:Card>

        <!-- ローディング -->
        <Grid Grid.RowSpan="3"
              Background="#80000000"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                         IsIndeterminate="True"
                         Width="50" Height="50"/>
        </Grid>
    </Grid>
</UserControl>
