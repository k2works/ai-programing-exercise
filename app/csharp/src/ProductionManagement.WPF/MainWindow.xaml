<Window x:Class="ProductionManagement.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:ProductionManagement.WPF.ViewModels"
        mc:Ignorable="d"
        Title="生産管理システム"
        Height="768" Width="1200"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ヘッダー -->
            <materialDesign:ColorZone Grid.Row="0" Grid.ColumnSpan="2"
                                       Mode="PrimaryMid" Padding="16">
                <DockPanel>
                    <TextBlock Text="生産管理システム"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding CurrentUser}"
                                   VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <TextBlock Text="{Binding CurrentDate, StringFormat=yyyy年MM月dd日}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- ナビゲーションメニュー -->
            <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource MaterialDesignPaper}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- マスタ -->
                        <Expander Header="マスタ" IsExpanded="True">
                            <StackPanel>
                                <Button Content="品目マスタ"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="ItemList"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="部品構成表"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="BomExplode"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="取引先マスタ"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="SupplierList"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Expander>

                        <!-- 計画 -->
                        <Expander Header="計画">
                            <StackPanel>
                                <Button Content="MRP 実行"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="MrpExecute"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                                <Button Content="オーダ照会"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="OrderList"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Expander>

                        <!-- 購買 -->
                        <Expander Header="購買">
                            <StackPanel>
                                <Button Content="発注"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="PurchaseOrderList"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Expander>

                        <!-- 製造 -->
                        <Expander Header="製造">
                            <StackPanel>
                                <Button Content="作業指示"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="WorkOrderList"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Expander>

                        <!-- 在庫 -->
                        <Expander Header="在庫">
                            <StackPanel>
                                <Button Content="在庫照会"
                                        Command="{Binding NavigateCommand}"
                                        CommandParameter="InventoryList"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- メインコンテンツ -->
            <Border Grid.Row="1" Grid.Column="1" Padding="16">
                <ContentControl Content="{Binding CurrentView}"/>
            </Border>

            <!-- ステータスバー -->
            <StatusBar Grid.Row="2" Grid.ColumnSpan="2">
                <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <ProgressBar Width="100" Height="10"
                                 IsIndeterminate="{Binding IsLoading}"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </materialDesign:DialogHost>
</Window>
