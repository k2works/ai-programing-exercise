@model List<ProductionManagement.Web.Models.InventorySummaryViewModel>
@{
    ViewData["Title"] = "在庫不足一覧";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-exclamation-triangle me-2"></i>在庫不足一覧</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>在庫一覧へ戻る
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-success" role="alert">
        <i class="bi bi-check-circle me-2"></i>
        現在、在庫不足の品目はありません。
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <strong>@Model.Count 件</strong>の品目が安全在庫を下回っています。
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>品目コード</th>
                            <th>品目名</th>
                            <th class="text-end">現在在庫</th>
                            <th class="text-end">安全在庫</th>
                            <th class="text-end">不足数量</th>
                            <th>充足率</th>
                            <th class="text-center" style="width: 100px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(m => m.DifferenceQuantity))
                        {
                            var fulfillmentRate = item.SafetyStock.HasValue && item.SafetyStock.Value > 0
                                ? Math.Round(item.TotalQuantity / item.SafetyStock.Value * 100, 1)
                                : 100m;
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.ItemCode" class="text-decoration-none">
                                        @item.ItemCode
                                    </a>
                                </td>
                                <td>@item.ItemName</td>
                                <td class="text-end">@item.TotalQuantity.ToString("#,##0.###")</td>
                                <td class="text-end">@(item.SafetyStock?.ToString("#,##0.###") ?? "-")</td>
                                <td class="text-end text-danger fw-bold">
                                    @item.DifferenceQuantity?.ToString("#,##0.###")
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px; min-width: 100px;">
                                        <div class="progress-bar @GetProgressBarClass(fulfillmentRate)"
                                             role="progressbar"
                                             style="width: @Math.Min(fulfillmentRate, 100)%"
                                             aria-valuenow="@fulfillmentRate"
                                             aria-valuemin="0"
                                             aria-valuemax="100">
                                            @fulfillmentRate.ToString("0.0")%
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.ItemCode"
                                       class="btn btn-sm btn-outline-primary" title="詳細">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted">
        <small>全 @Model.Count 件</small>
    </div>
}

@functions {
    string GetProgressBarClass(decimal rate)
    {
        return rate switch
        {
            >= 80 => "bg-warning",
            >= 50 => "bg-warning",
            >= 25 => "bg-danger",
            _ => "bg-danger"
        };
    }
}
