@{
    ViewData["Title"] = "ダッシュボード";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="bi bi-speedometer2 me-2"></i>ダッシュボード</h2>
        <p class="text-muted">生産管理システムの概要を確認できます。</p>
    </div>
</div>

<!-- サマリーカード -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">品目マスタ</h6>
                        <h2 class="card-title mb-0">@ViewBag.ItemCount</h2>
                    </div>
                    <i class="bi bi-box-seam text-primary" style="font-size: 2.5rem;"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-primary">
                <a asp-controller="Items" asp-action="Index" class="text-decoration-none">
                    詳細を見る <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">発注管理</h6>
                        <h2 class="card-title mb-0">@ViewBag.PurchaseOrderCount</h2>
                    </div>
                    <i class="bi bi-cart text-success" style="font-size: 2.5rem;"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-success">
                <a asp-controller="PurchaseOrders" asp-action="Index" class="text-decoration-none">
                    詳細を見る <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">作業指示</h6>
                        <h2 class="card-title mb-0">@ViewBag.WorkOrderCount</h2>
                    </div>
                    <i class="bi bi-tools text-warning" style="font-size: 2.5rem;"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-warning">
                <a asp-controller="WorkOrders" asp-action="Index" class="text-decoration-none">
                    詳細を見る <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card border-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-subtitle mb-2 text-muted">在庫管理</h6>
                        <h2 class="card-title mb-0">@ViewBag.InventoryCount</h2>
                    </div>
                    <i class="bi bi-archive text-info" style="font-size: 2.5rem;"></i>
                </div>
            </div>
            <div class="card-footer bg-transparent border-info">
                <a asp-controller="Inventory" asp-action="Index" class="text-decoration-none">
                    詳細を見る <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- クイックアクセス -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-lightning me-2"></i>クイックアクセス
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-2">
                        <a asp-controller="Items" asp-action="Create" class="btn btn-outline-primary w-100">
                            <i class="bi bi-plus-circle me-2"></i>品目登録
                        </a>
                    </div>
                    <div class="col-md-4 mb-2">
                        <a asp-controller="PurchaseOrders" asp-action="Create" class="btn btn-outline-success w-100">
                            <i class="bi bi-cart-plus me-2"></i>発注登録
                        </a>
                    </div>
                    <div class="col-md-4 mb-2">
                        <a asp-controller="WorkOrders" asp-action="Create" class="btn btn-outline-warning w-100">
                            <i class="bi bi-clipboard-plus me-2"></i>作業指示登録
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- システム情報 -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-info-circle me-2"></i>システム情報
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless mb-0">
                            <tr>
                                <td class="text-muted" style="width: 40%;">システム名</td>
                                <td>生産管理システム</td>
                            </tr>
                            <tr>
                                <td class="text-muted">バージョン</td>
                                <td>1.0.0</td>
                            </tr>
                            <tr>
                                <td class="text-muted">フレームワーク</td>
                                <td>ASP.NET Core MVC (.NET 10)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm table-borderless mb-0">
                            <tr>
                                <td class="text-muted" style="width: 40%;">アーキテクチャ</td>
                                <td>Hexagonal Architecture</td>
                            </tr>
                            <tr>
                                <td class="text-muted">データベース</td>
                                <td>PostgreSQL</td>
                            </tr>
                            <tr>
                                <td class="text-muted">UI フレームワーク</td>
                                <td>Bootstrap 5 + htmx</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
