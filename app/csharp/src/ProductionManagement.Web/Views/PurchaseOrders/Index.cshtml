@model ProductionManagement.Web.Models.PurchaseOrderListViewModel
@{
    ViewData["Title"] = "発注一覧";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-cart me-2"></i>発注一覧</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>新規発注
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-3">
                <label asp-for="Search.Keyword" class="form-label"></label>
                <input asp-for="Search.Keyword" class="form-control"
                       placeholder="発注番号・取引先コードで検索">
            </div>
            <div class="col-md-2">
                <label asp-for="Search.Status" class="form-label"></label>
                <select asp-for="Search.Status" asp-items="Model.Search.StatusOptions" class="form-select">
                    <option value="">すべて</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Search.OrderDateFrom" class="form-label"></label>
                <input asp-for="Search.OrderDateFrom" type="date" class="form-control">
            </div>
            <div class="col-md-2">
                <label asp-for="Search.OrderDateTo" class="form-label"></label>
                <input asp-for="Search.OrderDateTo" type="date" class="form-control">
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i>検索
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>クリア
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>発注番号</th>
                        <th>発注日</th>
                        <th>取引先コード</th>
                        <th>ステータス</th>
                        <th class="text-end">明細数</th>
                        <th class="text-center" style="width: 100px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.PurchaseOrders.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-inbox me-2"></i>該当する発注がありません
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model.PurchaseOrders)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.PurchaseOrderNumber" class="text-decoration-none">
                                        @order.PurchaseOrderNumber
                                    </a>
                                </td>
                                <td>@order.OrderDate.ToString("yyyy/MM/dd")</td>
                                <td>@order.SupplierCode</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                        @order.StatusDisplayName
                                    </span>
                                </td>
                                <td class="text-end">@order.Details.Count 件</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@order.PurchaseOrderNumber"
                                       class="btn btn-sm btn-outline-primary" title="詳細">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3 text-muted">
    <small>全 @Model.PurchaseOrders.Count 件</small>
</div>

@functions {
    string GetStatusBadgeClass(ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus status)
    {
        return status switch
        {
            ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus.Creating => "bg-secondary",
            ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus.Ordered => "bg-primary",
            ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus.PartiallyReceived => "bg-info",
            ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus.Received => "bg-success",
            ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus.Accepted => "bg-success",
            ProductionManagement.Domain.Models.Purchase.PurchaseOrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
