@model ProductionManagement.Web.Models.WhereUsedViewModel
@{
    ViewData["Title"] = "使用先照会";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-arrow-up-circle me-2"></i>使用先照会</h2>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="WhereUsed" method="get" class="row g-3">
            <div class="col-md-4">
                <label asp-for="ItemCode" class="form-label"></label>
                <input asp-for="ItemCode" class="form-control"
                       placeholder="子品目コードを入力" required>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search me-1"></i>照会
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Results.Any())
{
    <div class="card">
        <div class="card-header">
            <i class="bi bi-list-ul me-2"></i>使用先一覧
            <span class="badge bg-secondary ms-2">@Model.Results.Count 件</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>親品目コード</th>
                            <th>品目名</th>
                            <th class="text-end">所要量</th>
                            <th class="text-center" style="width: 100px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.Results)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Items" asp-action="Details" asp-route-id="@result.ParentItemCode"
                                       class="text-decoration-none">
                                        @result.ParentItemCode
                                    </a>
                                </td>
                                <td>@result.ItemName</td>
                                <td class="text-end">@result.RequiredQuantity.ToString("N2")</td>
                                <td class="text-center">
                                    <a asp-action="Explode" asp-route-itemCode="@result.ParentItemCode"
                                       class="btn btn-sm btn-outline-primary" title="部品展開">
                                        <i class="bi bi-diagram-3"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(Model.ItemCode))
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>使用先がありません。
    </div>
}
