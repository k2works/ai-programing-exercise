<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 生産管理システム</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gear-fill me-2"></i>生産管理システム
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <!-- マスタ -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-database me-1"></i>マスタ
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Items" asp-action="Index">品目マスタ</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><h6 class="dropdown-header">BOM（部品構成表）</h6></li>
                                <li><a class="dropdown-item" asp-controller="Bom" asp-action="Explode">部品展開</a></li>
                                <li><a class="dropdown-item" asp-controller="Bom" asp-action="WhereUsed">使用先照会</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Suppliers" asp-action="Index">取引先マスタ</a></li>
                            </ul>
                        </li>
                        <!-- 計画 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-calendar-check me-1"></i>計画
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Mrp" asp-action="Execute">MRP 所要量展開</a></li>
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index">オーダ一覧</a></li>
                            </ul>
                        </li>
                        <!-- 購買 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-cart me-1"></i>購買
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Index">発注一覧</a></li>
                                <li><a class="dropdown-item" asp-controller="PurchaseOrders" asp-action="Create">発注登録</a></li>
                            </ul>
                        </li>
                        <!-- 製造 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-tools me-1"></i>製造
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="WorkOrders" asp-action="Index">作業指示一覧</a></li>
                                <li><a class="dropdown-item" asp-controller="WorkOrders" asp-action="Create">作業指示登録</a></li>
                            </ul>
                        </li>
                        <!-- 在庫 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-box-seam me-1"></i>在庫
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="Index">在庫一覧</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3 mt-4 bg-light">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <i class="bi bi-gear-fill me-1"></i>生産管理システム &copy; 2025
                </div>
                <div class="col-md-6 text-end">
                    <small>TDD で育てる生産管理システム</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
