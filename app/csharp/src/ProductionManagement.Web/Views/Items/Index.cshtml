@model ProductionManagement.Web.Models.ItemListViewModel
@{
    ViewData["Title"] = "品目マスタ";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-box-seam me-2"></i>品目マスタ</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>新規登録
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label asp-for="Search.Keyword" class="form-label"></label>
                <input asp-for="Search.Keyword" class="form-control"
                       placeholder="品目コード・品名で検索">
            </div>
            <div class="col-md-3">
                <label asp-for="Search.Category" class="form-label"></label>
                <select asp-for="Search.Category" asp-items="Model.Search.CategoryOptions" class="form-select">
                    <option value="">すべて</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i>検索
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>クリア
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>品目コード</th>
                        <th>品目名</th>
                        <th>品目区分</th>
                        <th>単位</th>
                        <th class="text-end">リードタイム</th>
                        <th class="text-end">安全在庫</th>
                        <th class="text-center" style="width: 150px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox me-2"></i>該当する品目がありません
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.ItemCode" class="text-decoration-none">
                                        @item.ItemCode
                                    </a>
                                </td>
                                <td>@item.ItemName</td>
                                <td>
                                    <span class="badge @GetCategoryBadgeClass(item.ItemCategory)">
                                        @item.ItemCategoryDisplayName
                                    </span>
                                </td>
                                <td>@item.UnitCode</td>
                                <td class="text-end">@item.LeadTime 日</td>
                                <td class="text-end">@item.SafetyStock.ToString("N0")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.ItemCode"
                                           class="btn btn-outline-primary" title="編集">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ItemCode"
                                           class="btn btn-outline-danger" title="削除">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3 text-muted">
    <small>全 @Model.Items.Count 件</small>
</div>

@functions {
    string GetCategoryBadgeClass(ProductionManagement.Domain.Models.Item.ItemCategory category)
    {
        return category switch
        {
            ProductionManagement.Domain.Models.Item.ItemCategory.Product => "bg-primary",
            ProductionManagement.Domain.Models.Item.ItemCategory.SemiProduct => "bg-info",
            ProductionManagement.Domain.Models.Item.ItemCategory.Intermediate => "bg-secondary",
            ProductionManagement.Domain.Models.Item.ItemCategory.Part => "bg-warning text-dark",
            ProductionManagement.Domain.Models.Item.ItemCategory.Material => "bg-success",
            ProductionManagement.Domain.Models.Item.ItemCategory.RawMaterial => "bg-dark",
            ProductionManagement.Domain.Models.Item.ItemCategory.Supply => "bg-light text-dark",
            _ => "bg-secondary"
        };
    }
}
