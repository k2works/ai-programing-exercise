@model ProductionManagement.Web.Models.ItemViewModel

<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            <label asp-for="ItemCode" class="form-label"></label>
            @if (ViewBag.IsEdit == true)
            {
                <input asp-for="ItemCode" class="form-control" readonly />
            }
            else
            {
                <input asp-for="ItemCode" class="form-control" />
            }
            <span asp-validation-for="ItemCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ItemName" class="form-label"></label>
            <input asp-for="ItemName" class="form-control" />
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ItemCategory" class="form-label"></label>
            <select asp-for="ItemCategory" asp-items="@ViewBag.Categories" class="form-select"></select>
            <span asp-validation-for="ItemCategory" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UnitCode" class="form-label"></label>
            <input asp-for="UnitCode" class="form-control" placeholder="例: 個, kg, m" />
            <span asp-validation-for="UnitCode" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="LeadTime" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="LeadTime" class="form-control" type="number" min="0" />
                    <span class="input-group-text">日</span>
                </div>
                <span asp-validation-for="LeadTime" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="SafetyLeadTime" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="SafetyLeadTime" class="form-control" type="number" min="0" />
                    <span class="input-group-text">日</span>
                </div>
                <span asp-validation-for="SafetyLeadTime" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="SafetyStock" class="form-label"></label>
            <input asp-for="SafetyStock" class="form-control" type="number" min="0" step="0.01" />
            <span asp-validation-for="SafetyStock" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="YieldRate" class="form-label"></label>
            <div class="input-group">
                <input asp-for="YieldRate" class="form-control" type="number" min="0" max="100" step="0.1" />
                <span class="input-group-text">%</span>
            </div>
            <span asp-validation-for="YieldRate" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="MinLotSize" class="form-label"></label>
        <input asp-for="MinLotSize" class="form-control" type="number" min="0.001" step="0.001" />
        <span asp-validation-for="MinLotSize" class="text-danger"></span>
    </div>

    <div class="col-md-4 mb-3">
        <label asp-for="LotIncrement" class="form-label"></label>
        <input asp-for="LotIncrement" class="form-control" type="number" min="0.001" step="0.001" />
        <span asp-validation-for="LotIncrement" class="text-danger"></span>
    </div>

    <div class="col-md-4 mb-3">
        <label asp-for="MaxLotSize" class="form-label"></label>
        <input asp-for="MaxLotSize" class="form-control" type="number" min="0" step="0.001" />
        <span asp-validation-for="MaxLotSize" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="ShelfLife" class="form-label"></label>
        <div class="input-group">
            <input asp-for="ShelfLife" class="form-control" type="number" min="1" />
            <span class="input-group-text">日</span>
        </div>
        <span asp-validation-for="ShelfLife" class="text-danger"></span>
    </div>
</div>
