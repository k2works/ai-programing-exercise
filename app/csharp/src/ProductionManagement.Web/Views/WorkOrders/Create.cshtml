@model ProductionManagement.Web.Models.WorkOrderCreateViewModel
@{
    ViewData["Title"] = "作業指示登録";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-tools me-2"></i>作業指示登録</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>一覧へ戻る
        </a>
    </div>
</div>

<form asp-action="Create" method="post">
    <div class="card">
        <div class="card-header">
            <i class="bi bi-info-circle me-2"></i>基本情報
        </div>
        <div class="card-body">
            @if (!Model.OrderOptions.Any())
            {
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    確定済みのオーダがありません。作業指示を登録するには、まずオーダを確定してください。
                </div>
            }
            else
            {
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="OrderNumber" class="form-label"></label>
                        <select asp-for="OrderNumber" asp-items="Model.OrderOptions" class="form-select">
                            <option value="">オーダを選択してください</option>
                        </select>
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                        <div class="form-text">確定済みのオーダから選択してください。</div>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="WorkOrderDate" class="form-label"></label>
                        <input asp-for="WorkOrderDate" type="date" class="form-control" />
                        <span asp-validation-for="WorkOrderDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="LocationCode" class="form-label"></label>
                        <input asp-for="LocationCode" class="form-control" />
                        <span asp-validation-for="LocationCode" class="text-danger"></span>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (Model.OrderOptions.Any())
    {
        <div class="card mt-3">
            <div class="card-header">
                <i class="bi bi-calendar-range me-2"></i>日程情報
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="PlannedStartDate" class="form-label"></label>
                        <input asp-for="PlannedStartDate" type="date" class="form-control" />
                        <span asp-validation-for="PlannedStartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PlannedEndDate" class="form-label"></label>
                        <input asp-for="PlannedEndDate" type="date" class="form-control" />
                        <span asp-validation-for="PlannedEndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Remarks" class="form-label"></label>
                        <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Remarks" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i>登録
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-x-circle me-1"></i>キャンセル
            </a>
        </div>
    }
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
