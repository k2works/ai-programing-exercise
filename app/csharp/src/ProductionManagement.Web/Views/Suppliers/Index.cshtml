@model ProductionManagement.Web.Models.SupplierListViewModel
@{
    ViewData["Title"] = "取引先マスタ";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-building me-2"></i>取引先マスタ</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>新規登録
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label asp-for="Search.Keyword" class="form-label"></label>
                <input asp-for="Search.Keyword" class="form-control"
                       placeholder="取引先コード・取引先名で検索">
            </div>
            <div class="col-md-3">
                <label asp-for="Search.SupplierType" class="form-label"></label>
                <select asp-for="Search.SupplierType" asp-items="Model.Search.SupplierTypeOptions" class="form-select">
                    <option value="">すべて</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i>検索
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>クリア
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>取引先コード</th>
                        <th>取引先名</th>
                        <th>取引先区分</th>
                        <th>電話番号</th>
                        <th>担当者</th>
                        <th class="text-center" style="width: 100px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Suppliers.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-inbox me-2"></i>該当する取引先がありません
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var supplier in Model.Suppliers)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@supplier.SupplierCode" class="text-decoration-none">
                                        @supplier.SupplierCode
                                    </a>
                                </td>
                                <td>@supplier.SupplierName</td>
                                <td>
                                    <span class="badge @GetSupplierTypeBadgeClass(supplier.SupplierType)">
                                        @supplier.SupplierTypeDisplayName
                                    </span>
                                </td>
                                <td>@supplier.PhoneNumber</td>
                                <td>@supplier.ContactPerson</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@supplier.SupplierCode"
                                       class="btn btn-sm btn-outline-primary" title="詳細">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3 text-muted">
    <small>全 @Model.Suppliers.Count 件</small>
</div>

@functions {
    string GetSupplierTypeBadgeClass(ProductionManagement.Domain.Models.Supplier.SupplierType supplierType)
    {
        return supplierType switch
        {
            ProductionManagement.Domain.Models.Supplier.SupplierType.Vendor => "bg-primary",
            ProductionManagement.Domain.Models.Supplier.SupplierType.Subcontractor => "bg-info",
            ProductionManagement.Domain.Models.Supplier.SupplierType.Customer => "bg-success",
            ProductionManagement.Domain.Models.Supplier.SupplierType.VendorAndSubcontractor => "bg-warning text-dark",
            _ => "bg-secondary"
        };
    }
}
