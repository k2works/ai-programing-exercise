@model ProductionManagement.Web.Models.OrderListViewModel
@{
    ViewData["Title"] = "オーダ一覧";
}

<div class="row mb-3">
    <div class="col">
        <h2><i class="bi bi-calendar-check me-2"></i>オーダ一覧</h2>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>新規オーダ
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-2">
                <label asp-for="Search.Keyword" class="form-label"></label>
                <input asp-for="Search.Keyword" class="form-control"
                       placeholder="オーダ番号・品目コード">
            </div>
            <div class="col-md-2">
                <label asp-for="Search.OrderType" class="form-label"></label>
                <select asp-for="Search.OrderType" asp-items="Model.Search.OrderTypeOptions" class="form-select">
                    <option value="">すべて</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Search.Status" class="form-label"></label>
                <select asp-for="Search.Status" asp-items="Model.Search.StatusOptions" class="form-select">
                    <option value="">すべて</option>
                </select>
            </div>
            <div class="col-md-2">
                <label asp-for="Search.DueDateFrom" class="form-label"></label>
                <input asp-for="Search.DueDateFrom" type="date" class="form-control">
            </div>
            <div class="col-md-2">
                <label asp-for="Search.DueDateTo" class="form-label"></label>
                <input asp-for="Search.DueDateTo" type="date" class="form-control">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i>検索
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>クリア
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>オーダ番号</th>
                        <th>種別</th>
                        <th>品目コード</th>
                        <th>着手日</th>
                        <th>納期</th>
                        <th class="text-end">計画数量</th>
                        <th>ステータス</th>
                        <th class="text-center" style="width: 100px;">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Orders.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="bi bi-inbox me-2"></i>該当するオーダがありません
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="text-decoration-none">
                                        @order.OrderNumber
                                    </a>
                                </td>
                                <td>
                                    <span class="badge @(order.OrderType == ProductionManagement.Domain.Models.Plan.OrderType.Manufacturing ? "bg-primary" : "bg-info")">
                                        @order.OrderTypeDisplayName
                                    </span>
                                </td>
                                <td>@order.ItemCode</td>
                                <td>@order.StartDate.ToString("yyyy/MM/dd")</td>
                                <td>@order.DueDate.ToString("yyyy/MM/dd")</td>
                                <td class="text-end">@order.PlanQuantity.ToString("#,##0.###")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                        @order.StatusDisplayName
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@order.Id"
                                       class="btn btn-sm btn-outline-primary" title="詳細">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3 text-muted">
    <small>全 @Model.Orders.Count 件</small>
</div>

@functions {
    string GetStatusBadgeClass(ProductionManagement.Domain.Models.Plan.PlanStatus status)
    {
        return status switch
        {
            ProductionManagement.Domain.Models.Plan.PlanStatus.Draft => "bg-secondary",
            ProductionManagement.Domain.Models.Plan.PlanStatus.Confirmed => "bg-primary",
            ProductionManagement.Domain.Models.Plan.PlanStatus.Expanded => "bg-success",
            ProductionManagement.Domain.Models.Plan.PlanStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
