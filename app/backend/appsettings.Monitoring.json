{
  "Monitoring": {
    "HealthChecks": {
      "DatabaseConnectionTimeout": 30,
      "MemoryThresholds": {
        "WarningMB": 500,
        "CriticalMB": 1024
      },
      "DiskThresholds": {
        "WarningPercentage": 80,
        "CriticalPercentage": 90
      },
      "IntervalSeconds": 30,
      "Tags": {
        "Environment": "Production",
        "Service": "MRS-API",
        "Version": "1.0.0"
      }
    },
    "Metrics": {
      "ExportInterval": 15,
      "BatchSize": 512,
      "MaxExportTimeout": 30000,
      "CustomMetrics": {
        "ReservationMetrics": {
          "TrackUtilization": true,
          "TrackPeakHours": true,
          "TrackCancellationReasons": true
        },
        "SecurityMetrics": {
          "TrackUnauthorizedAccess": true,
          "TrackSessionDuration": true,
          "TrackFailedLogins": true
        },
        "PerformanceMetrics": {
          "TrackResponseTimes": true,
          "TrackDatabaseErrors": true,
          "TrackHealthCheckFailures": true
        }
      }
    },
    "Alerting": {
      "Rules": [
        {
          "Name": "HighMemoryUsage",
          "Metric": "mrs_memory_usage_mb",
          "Threshold": 800,
          "Comparison": "GreaterThan",
          "Duration": "5m",
          "Severity": "Warning"
        },
        {
          "Name": "CriticalMemoryUsage", 
          "Metric": "mrs_memory_usage_mb",
          "Threshold": 1024,
          "Comparison": "GreaterThan", 
          "Duration": "1m",
          "Severity": "Critical"
        },
        {
          "Name": "HighDiskUsage",
          "Metric": "mrs_disk_usage_percentage",
          "Threshold": 85,
          "Comparison": "GreaterThan",
          "Duration": "10m", 
          "Severity": "Warning"
        },
        {
          "Name": "DatabaseConnectionFailure",
          "Metric": "mrs_health_check_failures_total",
          "Tags": {
            "check_name": "database"
          },
          "Threshold": 0,
          "Comparison": "GreaterThan",
          "Duration": "1m",
          "Severity": "Critical"
        },
        {
          "Name": "HighUnauthorizedAccess",
          "Metric": "mrs_unauthorized_access_total", 
          "Threshold": 10,
          "Comparison": "GreaterThan",
          "Duration": "5m",
          "Severity": "Security"
        },
        {
          "Name": "HighReservationConflictRate",
          "Metric": "mrs_reservation_conflicts_total",
          "Threshold": 5,
          "Comparison": "GreaterThan", 
          "Duration": "10m",
          "Severity": "Warning"
        }
      ],
      "NotificationChannels": [
        {
          "Name": "Email",
          "Type": "email",
          "Enabled": true,
          "Recipients": ["ops@company.com", "dev@company.com"]
        },
        {
          "Name": "Slack",
          "Type": "slack", 
          "Enabled": true,
          "WebhookUrl": "#{SLACK_WEBHOOK_URL}#"
        }
      ]
    },
    "Dashboard": {
      "RefreshInterval": "30s",
      "TimeRange": "1h",
      "Panels": [
        {
          "Title": "System Health Overview",
          "Type": "stat",
          "Metrics": ["mrs_health_checks_status"],
          "Thresholds": [0.8, 0.9]
        },
        {
          "Title": "Memory Usage",
          "Type": "graph", 
          "Metrics": ["mrs_memory_usage_mb"],
          "Unit": "MB"
        },
        {
          "Title": "Disk Usage",
          "Type": "gauge",
          "Metrics": ["mrs_disk_usage_percentage"], 
          "Unit": "percent"
        },
        {
          "Title": "Reservation Activity",
          "Type": "graph",
          "Metrics": [
            "mrs_reservations_created_total", 
            "mrs_reservations_cancelled_total"
          ],
          "Unit": "ops/sec"
        },
        {
          "Title": "Authentication Success Rate",
          "Type": "stat",
          "Metrics": ["mrs_logins_success_total", "mrs_logins_failure_total"],
          "Calculation": "ratio"
        },
        {
          "Title": "Room Utilization", 
          "Type": "heatmap",
          "Metrics": ["mrs_room_utilization_percentage"],
          "Dimensions": ["room_id", "hour"]
        },
        {
          "Title": "Security Events",
          "Type": "table",
          "Metrics": [
            "mrs_unauthorized_access_total",
            "mrs_health_check_failures_total"
          ],
          "AlertLevel": "warning"
        },
        {
          "Title": "Response Time Distribution",
          "Type": "histogram", 
          "Metrics": ["mrs_reservation_duration_ms"],
          "Buckets": [100, 500, 1000, 2000, 5000]
        }
      ]
    }
  },
  "Logging": {
    "Structured": {
      "Enabled": true,
      "MinimumLevel": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning", 
        "Microsoft.AspNetCore": "Information"
      }
    },
    "Audit": {
      "Enabled": true,
      "RetentionYears": 7,
      "Categories": [
        "Authentication",
        "Authorization",
        "DataAccess", 
        "BusinessLogic",
        "Security"
      ]
    },
    "Destinations": [
      {
        "Name": "Console",
        "Type": "console",
        "Enabled": true,
        "MinLevel": "Information"
      },
      {
        "Name": "File",
        "Type": "file", 
        "Enabled": true,
        "Path": "logs/mrs-{Date}.log",
        "RollingInterval": "Day",
        "RetainedFileCountLimit": 365,
        "MinLevel": "Information"
      },
      {
        "Name": "AuditFile", 
        "Type": "file",
        "Enabled": true,
        "Path": "logs/audit/mrs-audit-{Date}.log",
        "RollingInterval": "Day", 
        "RetainedFileCountLimit": 2555,
        "MinLevel": "Information",
        "Filter": "Category = 'Audit'"
      }
    ]
  }
}