<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.production.infrastructure.out.mapper.IssueInstructionMapper">

    <resultMap id="IssueInstructionResultMap" type="com.example.production.domain.model.inventory.IssueInstruction">
        <id property="id" column="ID"/>
        <result property="instructionNumber" column="払出指示番号"/>
        <result property="orderNumber" column="オーダ番号"/>
        <result property="instructionDate" column="払出指示日"/>
        <result property="locationCode" column="場所コード"/>
        <result property="remarks" column="備考"/>
        <result property="createdAt" column="作成日時"/>
        <result property="updatedAt" column="更新日時"/>
    </resultMap>

    <resultMap id="IssueInstructionDetailResultMap" type="com.example.production.domain.model.inventory.IssueInstructionDetail">
        <id property="id" column="ID"/>
        <result property="instructionNumber" column="払出指示番号"/>
        <result property="lineNumber" column="払出行番号"/>
        <result property="itemCode" column="品目コード"/>
        <result property="routingSequence" column="工順"/>
        <result property="issueQuantity" column="払出数量"/>
        <result property="createdAt" column="作成日時"/>
        <result property="updatedAt" column="更新日時"/>
    </resultMap>

    <select id="findByInstructionNumber" resultMap="IssueInstructionResultMap">
        SELECT * FROM "払出指示データ"
        WHERE "払出指示番号" = #{instructionNumber}
    </select>

    <select id="findDetailsByInstructionNumber" resultMap="IssueInstructionDetailResultMap">
        SELECT * FROM "払出指示明細データ"
        WHERE "払出指示番号" = #{instructionNumber}
        ORDER BY "払出行番号"
    </select>

    <select id="countByPrefix" resultType="long">
        SELECT COUNT(*) FROM "払出指示データ"
        WHERE "払出指示番号" LIKE #{prefix} || '%'
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO "払出指示データ" (
            "払出指示番号", "オーダ番号", "払出指示日", "場所コード", "備考"
        ) VALUES (
            #{instructionNumber}, #{orderNumber}, #{instructionDate},
            #{locationCode}, #{remarks}
        )
    </insert>

    <insert id="insertDetail" useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
        INSERT INTO "払出指示明細データ" (
            "払出指示番号", "払出行番号", "品目コード", "工順", "払出数量"
        ) VALUES (
            #{instructionNumber}, #{lineNumber}, #{itemCode},
            #{routingSequence}, #{issueQuantity}
        )
    </insert>

    <delete id="deleteAllDetails">
        TRUNCATE TABLE "払出指示明細データ" CASCADE
    </delete>

    <delete id="deleteAll">
        TRUNCATE TABLE "払出指示データ" CASCADE
    </delete>
</mapper>
