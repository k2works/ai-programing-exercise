<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.production.infrastructure.persistence.mapper.WarehouseMapper">

    <resultMap id="WarehouseResultMap" type="com.example.production.domain.model.inventory.Warehouse">
        <id property="warehouseCode" column="倉庫コード"/>
        <result property="warehouseCategory" column="倉庫区分"/>
        <result property="warehouseName" column="倉庫名"/>
        <result property="departmentCode" column="部門コード"/>
        <result property="createdAt" column="作成日時"/>
        <result property="updatedAt" column="更新日時"/>
    </resultMap>

    <insert id="insert" parameterType="com.example.production.domain.model.inventory.Warehouse">
        INSERT INTO "倉庫マスタ" (
            "倉庫コード",
            "倉庫区分",
            "倉庫名",
            "部門コード",
            "作成日時",
            "更新日時"
        ) VALUES (
            #{warehouseCode},
            #{warehouseCategory},
            #{warehouseName},
            #{departmentCode},
            CURRENT_TIMESTAMP,
            CURRENT_TIMESTAMP
        )
    </insert>

    <select id="findByWarehouseCode" resultMap="WarehouseResultMap">
        SELECT * FROM "倉庫マスタ"
        WHERE "倉庫コード" = #{warehouseCode}
    </select>

    <select id="findByDepartmentCode" resultMap="WarehouseResultMap">
        SELECT * FROM "倉庫マスタ"
        WHERE "部門コード" = #{departmentCode}
        ORDER BY "倉庫コード"
    </select>

    <delete id="deleteAll">
        TRUNCATE TABLE "倉庫マスタ" CASCADE
    </delete>
</mapper>
