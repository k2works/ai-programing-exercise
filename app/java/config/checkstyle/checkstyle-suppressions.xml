<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- エンティティクラスのコンストラクタはパラメータ数制限を抑制 -->
    <suppress checks="ParameterNumber" files=".*[\\/]entity[\\/].*\.java" lines="1-9999"/>
    <!-- BalanceService の updateDailyBalance メソッドはパラメータ数制限を抑制 -->
    <suppress checks="ParameterNumber" files=".*[\\/]balance[\\/]BalanceService\.java" lines="1-9999"/>
    <!-- 財務諸表クラスのコンストラクタはパラメータ数制限を抑制 -->
    <suppress checks="ParameterNumber" files=".*[\\/]financial[\\/].*\.java" lines="1-9999"/>
    <!-- ドメインモデルのコンストラクタはパラメータ数制限を抑制 -->
    <suppress checks="ParameterNumber" files=".*[\\/]domain[\\/]model[\\/].*\.java" lines="1-9999"/>
    <!-- DTOのコンストラクタはパラメータ数制限を抑制 -->
    <suppress checks="ParameterNumber" files=".*[\\/]dto[\\/].*\.java" lines="1-9999"/>
    <!-- ロガーの定数名チェックを抑制 -->
    <suppress checks="ConstantName" files=".*[\\/]exception[\\/]GlobalExceptionHandler\.java" lines="1-9999"/>
</suppressions>
