<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- テストクラスを除外 -->
    <Match>
        <Class name="~.*Test"/>
    </Match>
    <Match>
        <Class name="~.*Tests"/>
    </Match>
    <Match>
        <Package name="~.*\.testsetup"/>
    </Match>

    <!-- Spring Boot 自動生成クラスを除外 -->
    <Match>
        <Class name="~.*Application"/>
    </Match>

    <!-- Lombok 生成コードに対する警告を除外 -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- 存在確認のみの取得パターンを許容 -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>

    <!-- RV_RETURN_VALUE_IGNORED を除外（存在確認パターン） -->
    <Match>
        <Bug pattern="RV_RETURN_VALUE_IGNORED_NO_SIDE_EFFECT"/>
    </Match>
</FindBugsFilter>
